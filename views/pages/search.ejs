<%- include('../template/head') -%>
<%- include('../template/navbarLogin') -%>
<%if(statusSearch) { %>
    <div class="alert d-flex justify-content-center <%= alertColorSearch %> liveAlertPlaceholder" role="alert">
        <h2><%= statusSearch %></h2>
    </div>
<% } %>
<div class="justify-content-center d-flex flex-row container-user pt-3">
    <div class="col-4 p-3 d-flex ">
        <form class="form-horizontal container-form-register col-12" method="POST" action="/search">
            <div></div>
            <h3 class="fw-login-heading">Buscar usuario</h3>
            <div class="form-group pt-3">
                <input class="form-control" type="text" name="fullname" placeholder="Nombre Completo" id="fullname">
            </div>
            <div class="form-group pt-3">
                <input class="form-control" type="text" name="employid" placeholder="Numero de Empleado" id="employid">
            </div>
            <button type="submit" class="btn btn-primary mt-3">Buscar Usuario</button>
        </form>
    </div>
    <div class="col-6 border border-primary border-1 p-3 pt-2 shadow p-3 mb-5 bg-body rounded overflow-auto" id="simple">
        <% if(historial) { %>
            <% for(let i = 0; i < historial.length; i++) { %>
                <div class="card text-dark bg-light mt-3 text-black mb-3 p-2" style="max-width: 100%;">
                    <%= historial[i] %>
                </div>
            <% } %>
        <% } %>
    </div>

</div>

<%- include('../template/footer') -%>