<%- include('../template/head') -%>
<%- include('../template/navbar') -%>
<div class="d-flex flex-column justify-content-center align-items-center container-user align-content-center">
    <%if(status) { %>
        <div class="alert <%= alertColor %>" role="alert">
            <h2><%= status %></h2>
        </div>
    <% } %>
    <form action='/des_user' method='post' class="d-flex flex-column container-form-register justify-content-center ">
        <div class="mt-3 d-flex justify-content-between">
            <label for="username">Usuario a desbloquear:</label>
            <input type="text" name="username" id="username" placeholder="Id Usuario">
        </div>
        <div class="mt-3 d-flex justify-content-between">
            <label for= 'password'>Contraseña:</label>
            <input type="password" name="password" id="password" placeholder="Contraseña">
        </div>
        <div class="mt-3 d-flex justify-content-between">
            <label for= 'rePassword'>Confirmar contraseña:</label>
            <input type="password" name="rePassword" id="rePassword" placeholder="Confirmar contraseña">
        </div>
        <button class="mt-3 btn btn-primary">Desbloquear</button>
    </form>
    <div class="light mt-5 container-form">
        <p id="letter" class="invalid">Nota: la Contraseña debe contener <b>Mayusculas</b>, <b>minusculas</b>, <b>Numeros</b>, y una longitud <b>de 8 a 16 caracteres</b> </p>
    </div>
</div>

<%- include('../template/footer') -%>